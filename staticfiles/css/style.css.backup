  border-color: #7e22ce;
}

/* === Verify Icon === */
.verify-icon {
  width: 1rem;
  height: 1rem;
  color: #22c55e;
  margin-left: 0.25rem;
}

/* === Responsive === */
@media (max-width: 1024px) {
  .artist-grid {
    grid-template-columns: 1fr;
  }
  .cards-grid {
    grid-template-columns: repeat(1, 1fr);
  }
  
  .artist-image {
    max-width: 400px;
    margin: 0 auto;
  }
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .artist-container {
    padding: 1.5rem 1rem;
  }
  
  .artist-header {
    padding: 1.5rem;
  }
  
  .artist-image {
    max-width: 300px;
  }
  
  .artist-details h1 {
    font-size: 1.875rem;
  }
}

/* Touch device optimizations */
@media (hover: none) {
  .artist-image::after,
  .artist-image::before {
    display: none;
  }
  
  .artist-image:hover img {
    transform: none;
  }
  
