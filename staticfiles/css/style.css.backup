  color: #fff;
}

.stat-label {
  font-size: 0.85rem;
  color: #999;
}

/* === Cards Grid === */
.cards-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

/* === Card === */
.card {
  position: relative;
  background-color: #1f1f1f;
